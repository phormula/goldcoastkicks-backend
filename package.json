{
  "name": "wedapp",
  "version": "1.0.0",
  "description": "Wedding App",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp -r src/views dist && cp -r src/public dist",
    "start": "node dist/index.js",
    "prod": "npm run build && npm run copy-package-json",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "copy-env-production": "cp .env dist/.env && sed -i 's/NODE_ENV=development/NODE_ENV=production/' dist/.env",
    "copy-package-json": "cp package.json dist/package.json",
    "lint": "eslint .",
    "test": "NODE_ENV=test mocha --require tsconfig-paths/register --exit",
    "generate:token": "node -e 'console.log(require('crypto').randomBytes(256).toString('base64'));'",
    "knex": "knex",
    "migrate": "npm run knex migrate:latest",
    "migrate:rollback": "npm run knex migrate:rollback --all",
    "seed": "npm run knex seed:run",
    "list-routes": "ts-node -r tsconfig-paths/register src/routes/list-routes.ts",
    "list-routes:prod": "node dist/routes/list-routes.js"
  },
  "author": "Evans Teiko",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^1.4.7",
    "bcrypt": "^5.1.0",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-list-endpoints": "^6.0.0",
    "express-validator": "^7.0.1",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.1",
    "knex": "^2.5.1",
    "mocha": "^10.2.0",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.5.2",
    "nodemailer": "^6.9.4",
    "objection": "^3.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-list-endpoints": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/module-alias": "^2.0.2",
    "@types/node": "^20.5.1",
    "@types/node-fetch": "^2.6.4",
    "@types/nodemailer": "^6.4.9",
    "@types/uuid": "^9.0.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "node-fetch": "^2.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
