{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@routes/*": ["src/routes/*"],
      "@model/*": ["src/model/*"]
    },
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src", "src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts", "build"]
}
